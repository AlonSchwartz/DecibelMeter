<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DecibelMeasurement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_shaped_button"
            android:text="start"
            android:textColor="#00007f"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="74dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/db_live"
                android:textColor="#a11d09"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_live_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#a11d09"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_db"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/db_res"
                android:textColor="#00007f"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txt_db_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#00007f"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/db_time"
                android:textColor="#00007f"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txt_time_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#00007f"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_loc"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/db_place"
                android:textColor="#00007f"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txt_loc_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#00007f"
                android:textSize="25sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>